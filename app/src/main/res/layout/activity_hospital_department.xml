<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05246A"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="717px"
            android:layout_height="131px"
            android:background="@mipmap/time_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:format24Hour="HH:mm"
                android:text="15:30"
                android:textColor="#FFFFFF"
                android:textSize="48px" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="2017年05月28日 星期一"
                android:textColor="#FFFFFF"
                android:textSize="36px" />

        </LinearLayout>

        <ImageView
            android:layout_width="449px"
            android:layout_height="100px"
            android:layout_marginRight="50px"
            android:layout_marginTop="31px"
            android:src="@mipmap/llogo" />

        <ImageView
            android:id="@+id/icon_main"
            android:layout_width="280px"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="31px"
            android:src="@mipmap/icon_main" />

        <ImageView
            android:id="@+id/icon_last"
            android:layout_width="280px"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="31px"
            android:src="@mipmap/icon_last" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginTop="50px"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler1"
            android:layout_width="480px"
            android:layout_height="match_parent"
            android:background="#F2F2F2"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:paddingLeft="25px"
            android:paddingTop="25px"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
